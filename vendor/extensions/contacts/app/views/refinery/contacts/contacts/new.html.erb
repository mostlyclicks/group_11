<% content_for :body do %>
  <div class='contacts'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first[:slug].to_sym) %>
    <!-- <h1>Contact Us</h1> -->

    <%= form_for [refinery, :contacts, @contact] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @contact,
                 :include_object_name => true  %>

      <div class='form-group field full_name_field string_field'>
        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: 'form-control' %>
      </div>

      <div class='form-group field email_address_field string_field'>
        <%= f.label :email_address %>
        <%= f.text_field :email_address, class: 'form-control' %>
      </div>

      <div class='form-group field ussa_number_field string_field'>
        <%= f.label :ussa_number %>
        <%= f.text_field :ussa_number, class: 'form-control' %>
      </div>

      <div class='form-group field discipline_field select_field'>
        <%= f.label :discipline %>
        <%= f.select :discipline, Refinery::Contacts::Contact::DISCIPLINES,
                     # :include_blank => true,
                     :prompt => "Choose your discipline" 
                      %>
      </div>

      <div class='form-group field message_field text_field'>
        <%= f.label :message %>
        <%= f.text_area :message, :rows => 8, class: 'form-control' %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send'), class: "btn btn-lg btn-primary" %><br />
      </div>
    <% end %>
  </div>
<% end %>

<div class="container" style="margin-top:50px;">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= render '/refinery/content_page' %> 
    </div>
  </div>
</div>
